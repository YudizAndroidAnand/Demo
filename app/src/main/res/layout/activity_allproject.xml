<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen.ActivityAllProject">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="My Project"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview"
        android:layout_marginTop="15dp"
        android:text="Layouts"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:text="View"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        android:text="Drawables"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        android:text="Custom Controls"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        android:text="Vector,Shapes,Selector"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        android:text="View Pager and TabLayout"/>
    <Button
        android:id="@+id/btn7"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        android:text="RecyclerView"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        android:text="SnackBar,Floating Action"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        android:text="Runtime Permission"/>
    <Button
        android:id="@+id/btn10"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        android:text="Fragments"/>
    <Button
        android:id="@+id/btn11"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:text="Dialogs(time, date, alert)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn10" />
    <Button
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:id="@+id/btn12"
        android:text="notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn11"/>
    <Button
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:id="@+id/btn13"
        android:text="Four Layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn12"/>
    <Button
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:id="@+id/btnNextScreen"
        android:text="Next Screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn13"
        android:backgroundTint="@color/green"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>