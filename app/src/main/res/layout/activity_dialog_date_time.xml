<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.DialogDateTime">

        <TextView
            android:id="@+id/tvdialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Dialog Box (Data,Time)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnclickkme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open dialog box"
            app:layout_constraintTop_toBottomOf="@id/tvdialog"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvshowdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnclickkme"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>